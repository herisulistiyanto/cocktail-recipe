<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/shimmer_view_top_left"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/shimmer_grey"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <View
        android:id="@+id/shimmer_view_mid_left"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmer_view_top_left"
        app:layout_constraintStart_toStartOf="@id/shimmer_view_top_left"
        android:background="@color/shimmer_grey"
        android:layout_width="180dp"
        android:layout_height="30dp" />

    <View
        android:id="@+id/shimmer_view_top_right"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/shimmer_grey"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <View
        android:id="@+id/shimmer_view_mid_right"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmer_view_top_right"
        app:layout_constraintStart_toStartOf="@id/shimmer_view_top_right"
        android:background="@color/shimmer_grey"
        android:layout_width="180dp"
        android:layout_height="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>