<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabFont" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/be_vietnam_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TransparentExpandedTextStyle" parent="Theme.CocktailApp">
        <item name="android:fontFamily">@font/be_vietnam_semibold</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="CollapsedTextStyle" parent="Theme.CocktailApp">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/be_vietnam_semibold</item>
    </style>

</resources>